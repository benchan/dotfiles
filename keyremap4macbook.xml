<!-- ~/Library/Application\ Support/KeyRemap4MacBook/private.xml -->
<?xml version="1.0"?>
<root>
    <item>
        <name>For HHKB Pro2</name>
        <appendix>  Set Eisu to Command_L or Eisu</appendix>
        <appendix>  Set Kana to Command_R or Kana</appendix>

        <item>
            <name>Fn + Q 〜 Fn + P to Fn + F1 〜 Fn + F10</name>
            <identifier>remap.my_hhkb_fn_letter_to_fn_func</identifier>
            <autogen>__KeyToKey__ KeyCode::Q, ModifierFlag::FN, KeyCode::F1, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::W, ModifierFlag::FN, KeyCode::F2, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::E, ModifierFlag::FN, KeyCode::F3, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::R, ModifierFlag::FN, KeyCode::F4, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::T, ModifierFlag::FN, KeyCode::F5, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::Y, ModifierFlag::FN, KeyCode::F6, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::U, ModifierFlag::FN, KeyCode::F7, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::I, ModifierFlag::FN, KeyCode::F8, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::O, ModifierFlag::FN, KeyCode::F9, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::P, ModifierFlag::FN, KeyCode::F10, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::A, ModifierFlag::FN, KeyCode::F11, ModifierFlag::FN</autogen>
            <autogen>__KeyToKey__ KeyCode::S, ModifierFlag::FN, KeyCode::F12, ModifierFlag::FN</autogen>
        </item>

        <item>
          <name>Shift_R to Shift_R for US Keyboard</name>
          <appendix>(+ When you type Shift_R only, send Underscore)</appendix>
          <identifier>remap.my_hhkb_us_shift_r_to_shift_r_or_underscore</identifier>
          <autogen>__KeyOverlaidModifier__ KeyCode::SHIFT_R, KeyCode::SHIFT_R, KeyCode::MINUS, ModifierFlag::SHIFT_L</autogen>
          <autogen>__KeyToKey__ KeyCode::SHIFT_R, ModifierFlag::SHIFT_L, KeyCode::MINUS, ModifierFlag::SHIFT_L</autogen>
        </item>

        <item>
          <name>Shift_R to Underscore for US Keyboard</name>
          <identifier>remap.my_hhkb_us_shift_r_to_underscore</identifier>
          <autogen>__KeyToKey__ KeyCode::SHIFT_R, ModifierFlag::SHIFT_R | ModifierFlag::NONE, KeyCode::MINUS, ModifierFlag::SHIFT_L</autogen>
          <autogen>__KeyToKey__ KeyCode::SHIFT_R, ModifierFlag::SHIFT_L, KeyCode::MINUS, ModifierFlag::SHIFT_L</autogen>
        </item>

        <item>
            <name>Option_L + hjkl to Arrow keys</name>
            <identifier>remap.my_hhkb_alt_hjkl_to_arrow</identifier>
            <autogen>__KeyToKey__ KeyCode::H, ModifierFlag::OPTION_L, KeyCode::CURSOR_LEFT</autogen>
            <autogen>__KeyToKey__ KeyCode::J, ModifierFlag::OPTION_L, KeyCode::CURSOR_DOWN</autogen>
            <autogen>__KeyToKey__ KeyCode::K, ModifierFlag::OPTION_L, KeyCode::CURSOR_UP</autogen>
            <autogen>__KeyToKey__ KeyCode::L, ModifierFlag::OPTION_L, KeyCode::CURSOR_RIGHT</autogen>
        </item>

        <item>
            <name>Control + Eisu/Kana to Control + Left/Right</name>
            <identifier>remap.my_hhkb_control_eisuu_kana_to_control_left_right</identifier>
            <autogen>__KeyToKey__ KeyCode::JIS_EISUU, ModifierFlag::CONTROL_L, KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L</autogen>
            <autogen>__KeyToKey__ KeyCode::JIS_KANA, ModifierFlag::CONTROL_L, KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L</autogen>
        </item>

        <item>
            <name>Single Option_L/Option_R to Control + Up/Down</name>
            <identifier>remap.my_hhkb_option_lr_to_control_updown</identifier>
            <autogen>__KeyOverlaidModifier__ KeyCode::OPTION_L, KeyCode::OPTION_L, KeyCode::CURSOR_UP, ModifierFlag::CONTROL_L</autogen>
            <autogen>__KeyOverlaidModifier__ KeyCode::OPTION_R, KeyCode::OPTION_R, KeyCode::CURSOR_DOWN, ModifierFlag::CONTROL_L</autogen>
        </item>
    </item>

    <item>
        <name>For Realforce</name>

        <item>
            <name>Backquote(`) to Escape</name>
            <identifier>remap.my_backquote2escape</identifier>
            <autogen>__KeyToKey__ KeyCode::BACKQUOTE, KeyCode::ESCAPE</autogen>
        </item>

        <item>
            <name> Single command keys to switch work spaces</name>
            <identifier>remap.my_switch_work_spaces</identifier>
            <autogen>__HoldingKeyToKey__ KeyCode::COMMAND_L, KeyCode::CURSOR_LEFT,  ModifierFlag::CONTROL_L, KeyCode::VK_NONE, KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_jis_command2eisuukana_prefer_eisuukana, ModifierFlag::COMMAND_L</autogen>
            <autogen>__HoldingKeyToKey__ KeyCode::COMMAND_R, KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_R, KeyCode::VK_NONE, KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_jis_command2eisuukana_prefer_eisuukana, ModifierFlag::COMMAND_R</autogen>
        </item>
    </item>

</root>
